<% layout("/layouts/boilerPlate") %>

<div class="row mt-3">
    <h1 class="col-6-lg offset-3  col-4-md offset-1">Signup on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3" >

                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" id="username" class="form-control" required>
                <div class="valid-feedback">
                     Looks good!
                  </div>
            </div>
        </br>
            <div class="mb-3" >

                <label for="email" class="form-label">Email</label>
                <input name="email" type="text" id="email" class="form-control" required>
            </div>

        </br>
        <div class="mb-3" >

            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" id="password" class="form-control" required>
        </div>
        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>